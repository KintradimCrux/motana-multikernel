<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:motana-multikernel="http://symfony.com/schema/dic/motana-multikernel"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd
    					http://symfony.com/schema/dic/motana-multikernel src/Resources/config/schema/motana-multikernel-1.0.xsd"
    >
    
	<!-- Default configuration for "MotanaMultiKernelBundle" -->
	<!-- Namespace: http://symfony.com/schema/dic/motana-multikernel -->
	<!--
	    default: Default kernel the front controller should load when no kernel matches the URL;
	             Example: app
	-->
	<motana-multikernel:config default="null">
	
	    <!-- Class cache configuration -->
	    <motana-multikernel:class-cache>
	
	        <!-- prototype -->
	        <!-- Classes to exclude from being cached in classes.php of app kernels -->
	        <motana-multikernel:exclude/>
	
	    </motana-multikernel:class-cache>
	
	    <!-- Console commands configuration -->
	    <motana-multikernel:commands>
	
	        <!-- prototype -->
	        <!-- Commands to add as multi-kernel command, bypassing the requirement of being available for all kernels -->
	        <motana-multikernel:add/>
	
	        <!-- prototype -->
	        <!-- Commands that will always be run on the boot kernel and will be hidden in the other kernels -->
	        <motana-multikernel:global/>
	
	        <!-- prototype -->
	        <!-- Commands that will be hidden in all kernels -->
	        <motana-multikernel:hidden/>
	
	    </motana-multikernel:commands>
	
	</motana-multikernel:config>
    
</container>
